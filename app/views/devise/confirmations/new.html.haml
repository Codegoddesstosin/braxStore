
.row
  .col-md-4.col-md-offset-4
    %h2 Resend confirmation instructions
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      - add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present?
      .form-group
        %label Email
        = f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control"
        = f.submit "Resend confirmation instructions", class: "btn btn-default"
    = render "devise/shared/links"
