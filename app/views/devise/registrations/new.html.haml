.row
  .col-md-4.col-md-offset-4
    .wrapper
      .logo
        = image_tag "Batman2.png"
        STARTER-KIT
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f|
        - add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present?

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-user
          .icon-addon
            .input-group-lg
              = f.email_field :email, autofocus: true, placeholder: "#{t ".email"}", autocomplete: "off", class: "form-control"

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password, autocomplete: "off", placeholder: "#{t ".password"}", class: "form-control"

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t ".confirm_password"}", class: "form-control"

        = f.submit (t ".sign_up_button"), class: "btn btn-success full-width"
      .help-links
        = render "devise/shared/links"
