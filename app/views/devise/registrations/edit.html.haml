.row
  .col-md-4.col-md-offset-4
    .wrapper
      .logo
        = image_tag "Batman2.png"
        STARTER-KIT

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
        - add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present?

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-user
          .icon-addon
            .input-group-lg
              = f.email_field :email, autofocus: true, placeholder: "#{t ".email"}", autocomplete: "off", class: "form-control"

        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password, autocomplete: "off", placeholder: "#{t ".new_password"}", class: "form-control"

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{t ".confirm_new_password"}", class: "form-control"

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password, autocomplete: "off", placeholder: "#{t ".current_password"}", class: "form-control"

        .form-group
          %label= t ".picture"
          = f.file_field :image, class: "block"

        .bottom-margin
          = f.submit (t ".button_update"), class: "btn btn-success full-width"
