.row
  .col-md-4.col-md-offset-4
    .wrapper
      .logo
        = image_tag "Batman2.png"
        STARTER-KIT
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        - add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present?

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-envelope
          .icon-addon
            .input-group-lg
              = f.email_field :email, autofocus: true, placeholder: "#{t ".email"}", autocomplete: "off", class: "form-control"

        = f.submit (t ".password_reset_instr"), class: "btn btn-success full-width"
      .help-links
        = render "devise/shared/links"
