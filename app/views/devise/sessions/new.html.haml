.row
  .col-md-4.col-md-offset-4
    .wrapper
      .logo
        = image_tag "Batman2.png"
        STARTER-KIT
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-user
          .icon-addon
            .input-group-lg
              = f.email_field :email, autofocus: true, placeholder: "#{t ".email"}", autocomplete: "off", class: "form-control"

        .input-group.input-group-lg.bottom-margin
          .input-group-addon
            .glyphicon.glyphicon-lock
          .icon-addon
            .input-group-lg
              = f.password_field :password, autocomplete: "off", placeholder: "#{t ".password"}", class: "form-control"

        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label (t ".remember_me")

        = f.submit (t ".button_log_in"), class: "btn btn-success full-width"
      .help-links
        = render "devise/shared/links"
